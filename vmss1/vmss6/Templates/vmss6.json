{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "applicationGatewayName": {
      "type": "string"
    },
    "appGwSkuName": {
      "type": "string"
    },
    "appGWTier": {
      "type": "string"
    },
    "appGwCap": {
      "type": "int"
    },
    "certData": {
      "type": "string"
    },
    "certPassword": {
      "type": "securestring"
    },
    "vmssname": {
      "type": "string"
    },
    "vmSize": {
      "type": "string",
      "metadata": {
        "description": "Size of VMs in the VM Scale Set."
      }
    },
    "instanceCount": {
      "type": "int",
      "metadata": {
        "description": "Number of VM instances (100 or less)."
      },
      "maxValue": 100
    },
    "storageAccountName": {
      "type": "string",
      "metadata": {
        "description": "Storage Account Name."
      }
    },
    "storAccountType": {
      "type": "string",
      "allowedValues": [
        "Standard_LRS",
        "Standard_ZRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ]
    },
    "osDiskName": {
      "type": "string",
      "defaultValue": "myOsDisk",
      "metadata": {
        "description": "OS disk Name"
      }
    },
    "computerNamePrefix": {
      "type": "string",
      "defaultValue": "node0",
      "metadata": {
        "description": "Computer Name Prefix"
      }
    },
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Admin username on all VMs."
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Admin password on all VMs."
      }
    },
    "vnetName": {
      "type": "string"
    },
    "vnetAddrPrefix": {
      "type": "string"
    },
    "subnetName1": {
      "type": "string"
    },
    "subnet1Prefix": {
      "type": "string"
    },
    "subnetName2": {
      "type": "string"
    },
    "subnet2Prefix": {
      "type": "string"
    },
    "PublicIPName1": {
      "type": "string"
    },
    "PublicIPName2": {
      "type": "string"
    },
    "lbname": {
      "type": "string"
    },
    "upgradePolicy": {
      "type": "string",
      "allowedValues": [
        "Manual",
        "Automatic"
      ]
    }
  },
  "variables": {
    "networkApiversion": "2016-03-30",
    "appGwID": "[resourceId('Microsoft.Network/applicationGateways', parameters('applicationGatewayName'))]",
    "appGwFeIPConfigID": "[concat(variables('appGwID'), '/frontendIPConfigurations/appGatewayFrontendIP')]",
    "appGwFePortID": "[concat(variables('appGwID'), '/frontendPorts/appGatewayFrontendPort')]",
    "appGwSslCertID": "[concat(variables('appGwID'), '/sslCertificates/appGatewaySslCert')]",
    "vnetID": "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'))]",
    "subnetId1": "[concat(variables('vnetID'), '/subnets/', parameters('subnetName1') )]",
    "subnetId2": "[concat(variables('vnetID'), '/subnets/', parameters('subnetName2') )]",
    "pipID1": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('PublicIPName1'))]",
    "pipID2": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('PublicIPName2'))]",
    "lbInNatPoolName": "lbinnatpool",
    "lbId": "[resourceId('Microsoft.Network/loadBalancers', parameters('lbname'))]",
    "lbFeIpConfID": "[concat(variables('lbId'), '/frontendIPConfigurations/loadBalancerFrontEnd')]",
    "lbFePortRanStart": 5000,
    "lbFePortRanEnd": 5100,
    "lbBePort": 22,
    "lbBeAddrPoolName": "BackendAddressPool",
    "lbBeAddrPoolId": "[concat(variables('lbId'), '/backendAddressPools/', variables('lbBeAddrPoolName'))]",
    "lbInNatPoolId": "[concat(variables('lbId'), '/inboundNatPools/', variables('lbInNatPoolName'))]",
    "vtmMarketplacePlan": {
      "name": "4",
      "publisher": "bitnami",
      "product": "exoplatform"
    },
    "osType": {
      "publisher": "bitnami",
      "offer": "exoplatform",
      "sku": "4",
      "version": "4.3.4"
    },
    "imageReference": "[variables('osType')]",
    "storageContainer": "[concat('https://', parameters('storageAccountName'), '.blob.core.windows.net/vhds')]",
    "AppNsgname": "nsg1"
  },
  "resources": [
    {
      "apiVersion": "[variables('networkApiversion')]",
      "name": "[parameters('applicationGatewayName')]",
      "type": "Microsoft.Network/applicationGateways",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Network/virtualNetworks/', parameters('vnetName'))]",
        "[concat('Microsoft.Network/publicIPAddresses/', parameters('PublicIPName1'))]"
      ],
      "properties": {
        "sku": {
          "name": "[parameters('appGwSkuName')]",
          "tier": "[parameters('appGWTier')]",
          "capacity": "[parameters('appGwCap')]"
        },
        "sslCertificates": [
          {
            "name": "appGatewaySslCert",
            "properties": {
              "data": "[parameters('certData')]",
              "password": "[parameters('certPassword')]"
            }
          }
        ],
        "gatewayIPConfigurations": [
          {
            "name": "appGatewayIpConfig",
            "properties": {
              "subnet": {
                "id": "[variables('subnetId1')]"
              }
            }
          }
        ],
        "frontendIPConfigurations": [
          {
            "name": "appGatewayFrontendIP",
            "properties": {
              "PublicIPAddress": {
                "id": "[variables('pipID1')]"
              }
            }
          }
        ],
        "frontendPorts": [
          {
            "name": "appGatewayFrontendPort",
            "properties": {
              "Port": 443
            }
          }
        ],
        "backendAddressPools": [
          {
            "name": "appGatewayBackendPool"
          }
        ],
        "backendHttpSettingsCollection": [
          {
            "name": "appGatewayBackendHttpSettings",
            "properties": {
              "Port": 80,
              "Protocol": "Http",
              "CookieBasedAffinity": "Enabled"
            }
          }
        ],
        "httpListeners": [
          {
            "name": "appGatewayHttpListener",
            "properties": {
              "FrontendIPConfiguration": {
                "Id": "[variables('appGwFeIPConfigID')]"
              },
              "FrontendPort": {
                "Id": "[variables('appGwFePortID')]"
              },
              "Protocol": "Https",
              "SslCertificate": {
                "Id": "[variables('appGwSslCertID')]"
              }
            }
          }
        ],
        "requestRoutingRules": [
          {
            "Name": "rule1",
            "properties": {
              "RuleType": "Basic",
              "httpListener": {
                "id": "[concat(variables('appGwID'), '/httpListeners/appGatewayHttpListener')]"
              },
              "backendAddressPool": {
                "id": "[concat(variables('appGwID'), '/backendAddressPools/appGatewayBackendPool')]"
              },
              "backendHttpSettings": {
                "id": "[concat(variables('appGwID'), '/backendHttpSettingsCollection/appGatewayBackendHttpSettings')]"
              }
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[parameters('PublicIPName1')]",
      "apiVersion": "[variables('networkApiversion')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "publicIPAllocationMethod": "Dynamic"
      }
    },
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[parameters('PublicIPName2')]",
      "apiVersion": "[variables('networkApiversion')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "publicIPAllocationMethod": "Dynamic"
      }
    },
    {
      "type": "Microsoft.Network/loadBalancers",
      "name": "[parameters('lbName')]",
      "apiVersion": "[variables('networkApiversion')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Network/publicIPAddresses/', parameters('PublicIPName2'))]"
      ],
      "properties": {
        "frontendIPConfigurations": [
          {
            "name": "loadBalancerFrontEnd",
            "properties": {
              "publicIPAddress": { "id": "[variables('pipID2')]" }
            }
          }
        ],
        "backendAddressPools": [
          {
            "name": "[variables('lbBeAddrPoolName')]"
          }
        ],
        "inboundNatPools": [
          {
            "name": "[variables('lbInNatPoolName')]",
            "properties": {
              "frontendIPConfiguration": { "id": "[variables('lbFeIpConfID')]" },
              "protocol": "tcp",
              "frontendPortRangeStart": "[variables('lbFePortRanStart')]",
              "frontendPortRangeEnd": "[variables('lbFePortRanEnd')]",
              "backendPort": "[variables('lbBePort')]"
            }
          }
        ]
      }
    },
    {
      "apiVersion": "[variables('networkApiversion')]",
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[variables('AppNsgname')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "securityRules": [
          {
            "name": "ssh",
            "properties": {
              "description": "allow inbound SSH to VMSS",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "22",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 1000,
              "direction": "Inbound"
            }
          },
          {
            "name": "httpport",
            "properties": {
              "description": "allow inbound http session",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "80",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 201,
              "direction": "Inbound"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[parameters('vnetName')]",
      "apiVersion": "[variables('networkApiversion')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Network/networkSecurityGroups/', variables('AppNsgname'))]"
      ],
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('vnetAddrPrefix')]"

          ]
        },
        "subnets": [
          {
            "name": "[parameters('subnetName1')]",
            "properties": {
              "addressPrefix": "[parameters('subnet1Prefix')]"
            }
          },
          {
            "name": "[parameters('subnetName2')]",
            "properties": {
              "addressPrefix": "[parameters('subnet2Prefix')]",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('AppNsgname'))]"
              }
            }
          }

        ]
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[parameters('storageAccountName')]",
      "apiVersion": "2015-06-15",
      "location": "[resourceGroup().location]",
      "properties": {
        "accountType": "[parameters('storAccountType')]"
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachineScaleSets",
      "name": "[parameters('vmssname')]",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "tags": {
        "displayName": "VMScaleSet"
      },
      "sku": {
        "name": "[parameters('vmSize')]",
        "tier": "Standard",
        "capacity": "[parameters('instanceCount')]"
      },
      "plan": "[variables('vtmMarketplacePlan')]",
      "dependsOn": [
        "[concat('Microsoft.Storage/storageAccounts/', parameters('storageAccountName'))]",
        "[concat('Microsoft.Network/virtualNetworks/', parameters('vnetName'))]",
        "[concat('Microsoft.Network/applicationGateways/', parameters('applicationGatewayName'))]"
      ],
      "properties": {
        "overprovision": "true",
        "upgradePolicy": {
          "mode": "Automatic"
        },
        "virtualMachineProfile": {
          "storageProfile": {
            "osDisk": {
              "vhdContainers": [
                "[variables('storageContainer')]"
              ],
              "name": "[parameters('osDiskName')]",
              "caching": "ReadOnly",
              "createOption": "FromImage"
            },
            "imageReference": "[variables('imageReference')]"
          },
          "osProfile": {
            "computerNamePrefix": "[parameters('computerNamePrefix')]",
            "adminUsername": "[parameters('adminUsername')]",
            "adminPassword": "[parameters('adminPassword')]"
          },
          "networkProfile": {
            "networkInterfaceConfigurations": [
              {
                "name": "netconfiginfo",
                "properties": {
                  "primary": true,
                  "ipConfigurations": [
                    {
                      "name": "nic",
                      "properties": {
                        "subnet": {
                          "id": "[variables('subnetId2')]"
                        },
                        "loadBalancerBackendAddressPools": [
                          {
                            "id": "[variables('lbBeAddrPoolId')]"
                          }
                        ],
                        "loadBalancerInboundNatPools": [
                          {
                            "id": "[variables('lbInNatPoolId')]"
                          }
                        ],
                        "ApplicationGatewayBackendAddressPools": [
                          {
                            "id": "[concat(variables('appGwID'), '/backendAddressPools/appGatewayBackendPool')]"
                          }
                        ]
                      }
                    }
                  ]
                }
              }
            ]
          }
        }
      }
    }
  ]
}